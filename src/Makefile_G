EXE      ?= hydra_G

CXX       = mpic++

#CXXFLAGS  = -O0
CXXFLAGS  = -Ofast
CXXFLAGS += -g
CXXFLAGS += -std=c++17
#CXXFLAGS += -xCORE-AVX512 -qopt-zmm-usage=high
#CXXFLAGS += -xCORE-AVX2
#CXXFLAGS += -xCORE-AVX2, -axCORE-AVX512 -qopt-zmm-usage=high
CXXFLAGS += -march=native
#CXXFLAGS += -D EIGEN_DONT_VECTORIZE
CXXFLAGS += -fopenmp
#CXXFLAGS += -qopt-report=2
#CXXFLAGS += -qopt-report-phase=loop,vec
#CXXFLAGS += -qopt-report-file=stdout
#CXXFLAGS +=  -fopt-info-vec-optimized

INCLUDE  = -I/home/orliac/external_soft/pcg-c/include
INCLUDE += -I$(EIGEN_ROOT)/include/eigen3
INCLUDE += -I$(BOOST_ROOT)/include
INCLUDE += -I$(MVAPICH2_ROOT)/include

LIBS      = -lz
#LIBS    += -lomp
#LIBS    += -lstdc++fs
#LIBS    += -lboost_system 
#LIBS    += -lboost_filesystem

SOURCES = main.cpp data.cpp BayesRRm.cpp BayesRRm_mt.cpp BayesW_arms.cpp BayesW.cpp gadgets.cpp distributions_boost.cpp options.cpp samplewriter.cpp compression.cpp

OBJECTS := $(patsubst %.cpp,%.o,$(SOURCES))

DEPENDS := $(patsubst %.cpp,%.d,$(SOURCES))

#WARNING := -Wall -Wextra

RM := /usr/bin/rm

.PHONY: all clean

all: $(EXE)

clean:
	$(RM) $(OBJECTS) $(DEPENDS) $(EXE)

$(EXE): $(OBJECTS)
	$(CXX) $(WARNING) $(CXXFLAGS) $(INCLUDE) $(LIBS) $^ -o $@

-include $(DEPENDS)

%.o: %.cpp Makefile
	$(CXX) $(WARNING) $(CXXFLAGS) $(INCLUDE) $(LIBS) -MMD -MP -c $< -o $@
